{
  "name": "racing-intelligence-companion",
  "version": "1.0.0",
  "description": "Racing Intelligence Companion - Stream iRacing telemetry data to OPR Intelligence web app",
  "main": "src/index.js",
  "bin": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "pkg . --targets node18-win-x64 --output dist/RacingIntelligenceCompanion.exe"
  },
  "keywords": [
    "iracing",
    "telemetry",
    "websocket"
  ],
  "author": "",
  "license": "ISC",
  "pkg": {
    "assets": [
      "node_modules/@irsdk-node/**/*"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "@irsdk-node/native": "^5.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.7",
    "pkg": "^5.8.1"
  }
}
